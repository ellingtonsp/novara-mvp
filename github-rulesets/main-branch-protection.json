{
  "name": "main-branch-protection",
  "enforcement": "active",
  "target": {
    "branch": {
      "protected": true,
      "name": "main"
    }
  },
  "rules": {
    "pull_request": {
      "required": true,
      "required_approving_review_count": 2,
      "dismiss_stale_reviews_on_push": true,
      "require_code_owner_reviews": true
    },
    "status_check": {
      "strict": true,
      "contexts": []
    },
    "required_workflows": [],
    "required_deployments": [],
    "required_signatures": {
      "required": false
    },
    "required_conversation_resolution": {
      "required": true
    },
    "required_linear_history": {
      "required": true
    },
    "required_pull_request_reviews": {
      "required": true,
      "required_approving_review_count": 2,
      "dismiss_stale_reviews_on_push": true,
      "require_code_owner_reviews": true
    },
    "deletion": {
      "protected": true
    },
    "force_push": {
      "protected": true
    }
  }
} 