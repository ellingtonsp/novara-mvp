FROM node:20-alpine
WORKDIR /app/backend

# Copy backend package files
COPY backend/package*.json ./

# Remove better-sqlite3 from dependencies before installing
# This is a workaround since better-sqlite3 is only used for local development
RUN sed -i '/"better-sqlite3":/d' package.json && \
    npm ci --omit=dev --no-audit --no-fund

# Copy backend source
COPY backend/ ./

# Set environment
ENV NODE_ENV=production

# Expose dynamic port
EXPOSE $PORT

# Start server
CMD ["npm", "start"]