{
  "name": "novara-backend",
  "version": "1.0.4",
  "description": "Backend for Novara MVP",
  "main": "server.js",
  "scripts": {
    "start": "node server-switcher.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "dev": "nodemon server-switcher.js",
    "local": "NODE_ENV=development USE_LOCAL_DATABASE=true nodemon server.js",
    "test:regression": "node production-regression-test.js",
    "db:setup": "psql $DATABASE_URL < ../database/schema.sql",
    "db:migrate": "node scripts/migrate-to-postgres.js",
    "db:validate": "node scripts/validate-postgres-migration.js",
    "audit:fields": "node scripts/audit-field-mappings.js",
    "check:deploy": "node scripts/pre-deployment-check.js",
    "start:legacy": "node server.js",
    "start:refactored": "USE_REFACTORED_SERVER=true node server-switcher.js",
    "dev:legacy": "nodemon server.js",
    "dev:refactored": "USE_REFACTORED_SERVER=true nodemon server-switcher.js",
    "test:refactored": "node test-refactored.js"
  },
  "dependencies": {
    "@sentry/node": "^9.41.0",
    "airtable": "^0.12.2",
    "axios": "^1.11.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "helmet": "^7.2.0",
    "ioredis": "^5.6.1",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "pg": "^8.16.3",
    "redis": "^5.6.1",
    "uuid": "^11.1.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "jest": "^30.0.5",
    "nodemon": "^3.1.9",
    "supertest": "^7.1.4"
  },
  "optionalDependencies": {
    "better-sqlite3": "^11.10.0"
  }
}
