{
  "watch": [
    "*.js",
    "routes/**/*.js",
    "middleware/**/*.js",
    "models/**/*.js",
    "utils/**/*.js",
    "database/**/*.js"
  ],
  "ignore": [
    "*.db",
    "*.sqlite",
    "*.sqlite3",
    "data/**/*",
    "logs/**/*",
    "tmp/**/*",
    "node_modules/**/*",
    "test/**/*",
    "*.test.js",
    "*.spec.js",
    ".git/**/*",
    ".app-ready",
    "**/.app-ready",
    ".app-ready*",
    "*.app-ready",
    "test-*.js",
    "production-*.js",
    "scripts/**/*",
    "*.log",
    "*.pid",
    ".env*",
    "coverage/**/*"
  ],
  "ext": "js,json",
  "delay": 2000,
  "verbose": false,
  "legacyWatch": false,
  "env": {
    "NODE_ENV": "development"
  }
} 