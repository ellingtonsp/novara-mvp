# Production Environment Variables for Railway Deployment
# Copy these to your Railway environment variables

NODE_ENV=production
PORT=3000
USE_LOCAL_DATABASE=false
DATABASE_TYPE=airtable

# Airtable Configuration (Required for production)
AIRTABLE_API_KEY=your_production_airtable_api_key
AIRTABLE_BASE_ID=your_production_airtable_base_id

# JWT Configuration (Required for authentication)
JWT_SECRET=your_production_jwt_secret_min_64_characters_long

# CORS Configuration
CORS_ORIGIN=https://novara-mvp.vercel.app

# Logging
LOG_LEVEL=info

# Error Tracking (Sentry)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Redis Configuration (Optional - for caching and rate limiting)
REDIS_HOST=your-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0 